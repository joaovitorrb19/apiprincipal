@inject UserManager<UsuarioModel> User;

@{
    var EstaAutenticado = Context.User.Identity.IsAuthenticated;

    if (EstaAutenticado)
    {
        var IndexEspaco = @User.FindByNameAsync(Context.User.Identity.Name).Result.NomeCompleto.IndexOf(" ");
        var NomeUsuario = @User.FindByNameAsync(Context.User.Identity.Name).Result.NomeCompleto.Substring(0, IndexEspaco);

        <li class="nav-item">
            <a class="nav-link text-danger">Bem vindo @NomeUsuario</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Usuario" asp-action="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Usuario" asp-action="Login">Login</a>
        </li>
    }
}