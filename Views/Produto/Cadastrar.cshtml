@model ProdutoModel

@{
    ViewBag.Subtitulo = "Produto";
}

<form asp-controller="Produto" asp-action="Cadastrar" class="form-control m-3">
    <input asp-for="IdProduto" hidden>
    <input asp-for="UsuarioQueCriou" hidden>
    <div class="m-3">
     <label asp-for="NomeProduto">Nome do Produto</label><br>
     <input class="form-control-sm" asp-for="NomeProduto"><br>
     <span asp-validation-for="NomeProduto" class="text-danger"></span>
    </div>
    <div class="m-3">
     <label asp-for="QuantidadeEstoque">Estoque</label><br>
     <input class="form-control-sm" asp-for="QuantidadeEstoque"><br>
     <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
    </div>
    <div class="m-3">
     <label asp-for="PrecoProduto">Pre√ßo</label><br>
     <input class="form-control-sm" asp-for="PrecoProduto"><br> 
     <span asp-validation-for="PrecoProduto" class="text-danger"></span>
    </div>
     <div class="m-3">
     <label asp-for="CategoriaId">Categoria</label><br>
     <select class="form-control-sm" asp-items="@ViewBag.Categorias" asp-for="CategoriaId"></select><br>
     <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

