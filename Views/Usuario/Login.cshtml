@model LoginViewModel

<form asp-action="Login" class="m-2">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="col-auto">
        <label asp-for="@Model.Email"><strong>Email:</strong></label><br>
        <input asp-for="@Model.Email"><br>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>

    <div class="col-auto">
        <label asp-for="@Model.Senha"><strong>Senha:</strong></label><br>
        <input asp-for="@Model.Senha" required ><br>
        <span asp-validation-for="@Model.Senha" class="text-danger"></span>
    </div>

    <div class="col-auto">
        <label asp-for="@Model.LembrarDeMim"><strong>Lembrar de Mim:</strong></label><br>
        <input asp-for="@Model.LembrarDeMim" >
        <span asp-validation-for="@Model.LembrarDeMim"></span>
    </div>
    
    <input asp-for="@Model.returnUrl" hidden>
     
     <button class="btn btn-primary" type="submit" style="margin-top: 1%;">Entrar</button>
     <a class="btn btn-secondary" asp-action="Cadastrar" style="margin-top: 1%;">Cadastrar</a>
     <a class="btn btn-secondary" asp-action="EsqueciSenha" style="margin-top: 1%;">Esqueci Senha</a>

</form>