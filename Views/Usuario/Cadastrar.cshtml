@model CadastrarUsuarioViewModel

<form asp-action="Cadastrar">

    <div asp-validation-summary="ModelOnly"></div>

    <div class="col-auto">
        <label asp-for="@Model.Email"><strong>Email:</strong></label><br>
        <input asp-for="@Model.Email" required>
        <span asp-validation-for="@Model.Email"></span>
    </div>

    <div class="col-auto">
        <label asp-for="@Model.NomeCompleto"><strong>Nome Completo:</strong></label><br>
        <input asp-for="@Model.NomeCompleto" required >
        <span asp-validation-for="@Model.NomeCompleto"></span>
    </div>

    <div class="col-auto">
        <label asp-for="@Model.CPF"><strong>Cpf:</strong></label><br>
        <input asp-for="@Model.CPF" required>
        <span asp-validation-for="@Model.CPF"></span>
    </div>

    <div class="col-auto">
        <label asp-for="@Model.DataNascimento"><strong>Data Nascimento:</strong></label><br>
        <input asp-for="@Model.DataNascimento" required >
        <span asp-validation-for="@Model.DataNascimento"></span>
    </div>

    <div class="col-auto">
        <label asp-for="@Model.Telefone"><strong>Telefone:</strong></label><br>
        <input asp-for="@Model.Telefone" required>
        <span asp-validation-for="@Model.Telefone"></span>
    </div>

    <div class="col-auto">
        <label asp-for="@Model.Senha"><strong>Senha:</strong></label><br>
        <input asp-for="@Model.Senha" required >
        <span asp-validation-for="@Model.Senha"></span>
    </div>

     <div class="col-auto">
        <label asp-for="@Model.ConfirmacaoSenha"><strong>Confirmação de Senha:</strong></label><br>
        <input asp-for="@Model.ConfirmacaoSenha" required >
        <span asp-validation-for="@Model.ConfirmacaoSenha"></span>
    </div>

     <button class="btn btn-primary" type="submit" style="margin-top: 1%;">Cadastrar</button>

     <a class="btn btn-secondary" asp-action="Login" style="margin-top: 1%;">Cancelar</a>

</form>